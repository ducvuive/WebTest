@model IEnumerable<Test.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Hóa đơn</h6>
            <div class="d-flex justify-content-end">
                <a asp-action="Index" asp-controller="HoaDon" asp-area="admin" asp-route-trangthai="1" class="btn btn-primary mr-1">
                    Đơn hàng chưa xác nhận
                </a>
                <a asp-action="Index" asp-controller="HoaDon" asp-area="admin" asp-route-trangthai="2" class="btn btn-secondary mr-1">
                    Đơn hàng đã xác nhận
                </a>
                <a asp-action="Index" asp-controller="HoaDon" asp-area="admin" asp-route-trangthai="3" class="btn btn-info mr-1">
                    Đơn hàng đang giao
                </a>
                <a asp-action="Index" asp-controller="HoaDon" asp-area="admin" asp-route-trangthai="4" class="btn btn-success">
                    Đơn hàng đã giao
                </a>
            </div>
        </div>

        <p></p>
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngayhd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nguoinhan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sdt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Diachigiaohang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tongtien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Thanhtien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Trangthai)
                            </th>
                            <th>
                                Tác vụ
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngayhd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nguoinhan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sdt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Diachigiaohang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tongtien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Thanhtien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Trangthai)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Mahd" class="btn btn-info">Chi tiết</a>
                                    @if (item.Trangthai == 0)
                                    {
                                        <button class="btn btn-warning">Xác nhận đơn hàng</button>
                                    }
                                    @if (item.Trangthai == 0 || item.Trangthai == 1)
                                    {
                                        <button class="btn btn-success">Xác nhận đang giao</button>
                                    }
                                    @if (item.Trangthai == 0 || item.Trangthai == 1 || item.Trangthai == 2)
                                    {
                                        <button class="btn btn-info">Xác nhận đã giao</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


